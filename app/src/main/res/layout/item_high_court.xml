<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBgPage">


    <LinearLayout
        android:id="@+id/lnr_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="100dp"
            android:id="@+id/imgview"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/wedding"
            android:visibility="visible"
            app:siShape="@drawable/img_shape" />


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/des"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Title About This News"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1 Day Ago 1:pm"
                android:textColor="@color/colorTextHint"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nov -10"
                android:textColor="@color/colorTextHint"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/cus_deviders"
        android:layout_below="@+id/lnr_main"
        android:layout_marginBottom="5dp" />
</RelativeLayout>